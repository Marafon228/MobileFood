<Page x:Class="MobileFood.Avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MobileFood"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoriz" Background="#FFFFFF">

    <Grid>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="10" FontSize="30"></TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Логин" Margin="10"></TextBlock>
                <TextBox Width="100" Height="15"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пароль" Margin="10"></TextBlock>
                <PasswordBox Width="100" Height="15"></PasswordBox>
            </StackPanel>

        </StackPanel>
        <Button Content="Войти" VerticalAlignment="Bottom" Click="Button_Click"></Button>
    </Grid>
</Page>
